<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    >
    <RelativeLayout
        android:id="@+id/view_container"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        >
        <TextView
            android:layout_width="88dp"
            android:layout_height="20dp"
            android:layout_margin="5dp"
            android:text="Nilai : "
            android:textAlignment="center"
            />
        <TextView
            android:id="@+id/nilai"
            android:layout_width="88dp"
            android:layout_height="120dp"
            android:text="70"
            android:textSize="40sp"
            android:textAlignment="center"
            android:gravity="center"
            android:padding="5dp"
            android:textStyle="bold"
            android:textAppearance="?android:textAppearanceMedium"

            />
        <LinearLayout
            android:layout_toRightOf="@+id/nilai"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/textMataKuliah"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pemograman Mobile"
                android:padding="5dp"
                android:textStyle="bold"
                android:textAppearance="?android:textAppearanceMedium"
                />
            <TextView
                android:id="@+id/textKelas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kelas A"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                />
            <TextView
                android:id="@+id/textNamaUjian"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="UTS Ganjil"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                />
            <TextView
                android:id="@+id/textTanggal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="20 Mei 2018, 03.00 PM"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                />
            <TextView
                android:id="@+id/textRuangUjian"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Gedung E 1.3"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:paddingBottom="5dp"
                />
        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>
    